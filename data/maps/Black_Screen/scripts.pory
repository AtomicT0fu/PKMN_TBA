mapscripts Black_Screen_MapScripts{
    MAP_SCRIPT_ON_FRAME_TABLE[
        VAR_ADVENTURE_START, 0: WarpToStart
    ]
}

script WarpToStart{
    lock
    delay(60)
    fadescreen(FADE_TO_BLACK)
    call(ReDrawRoom)
    fadenewbgm(MUS_FORTREE)
    delay(30)
    addobject(1)
    playse(SE_EXIT)
    waitse
    playmoncry(SPECIES_LILLIPUP, 0)
    waitmoncry
    applymovement(1, JumpInPlace_Down)
    playse(SE_BIKE_HOP)
    waitmovement(0)
    applymovement(1, PHB1F_Lillipup_Walk1)
    waitmovement(0)
    applymovement(1, JumpInPlace_Right)
    playse(SE_BIKE_HOP)
    waitmovement(0)
    removeobject(1)
    addobject(2)
    playmoncry(SPECIES_LILLIPUP, 0)
    waitmoncry
    setvar(VAR_ADVENTURE_START, 1)
    release
    end
}

script BS_Leave_Bed{
    speakername("{COLOR RED}{SHADOW LIGHT_RED}{FONT_SHORT}Mom")
    msgbox(BS_T_Mom1)
    closemessage
    turnobject(2, DIR_NORTH)
    playse(SE_PIN)
    applymovement(2, BS_Lilli_Ex1)
    waitmovement(0)
    delay(90)
    speakername("{COLOR RED}{SHADOW LIGHT_RED}{FONT_SHORT}Mom")
    msgbox(BS_T_Mom2)
    closemessage
    applymovement(2, JumpInPlace_Up)
    playse(SE_BIKE_HOP)
    waitmovement(0)
    playmoncry(SPECIES_LILLIPUP, 0)
    waitmoncry
    applymovement(2, BS_Lilli_Move1)
    waitmovement(0)
    playse(SE_EXIT)
    removeobject(2)
    call(Set_Start_Flags)
    setvar(VAR_ADVENTURE_START, 2)
    release
    end
}

