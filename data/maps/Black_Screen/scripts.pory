    walk_fast_down * 3
    walk_fast_right * 2
}

movement JumpInPlace_Down{
    jump_in_place_down
}

movement JumpInPlace_Right{
    jump_in_place_right
}

movement JumpInPlace_Up{
    jump_in_place_up
}

movement BS_Lilli_Ex1{
    emote_exclamation_mark
}

movement BS_Lilli_Move1{
    walk_fast_left * 2
    walk_fast_up * 3
}



