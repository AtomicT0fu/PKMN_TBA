script OBR_UpdateMetatiles{
    call(OBR_CheckLogFlag)
    call(CheckFenceFlag)
    call(OBR_CheckDoorLock)
    release
    end
}

script CheckFenceFlag{
    if(flag(FLAG_OBR_FENCE_BROKEN) == TRUE){
        setmetatile(30, 18, 0x267, TRUE)
        setmetatile(30, 19, 0x000, FALSE)
        setmetatile(30, 20, 0x25F, TRUE)
    }
    else{
    }
    return
}

script OBR_CheckDoorLock{
    if(flag(FLAG_SYS_POKEMON_GET) == TRUE){
        setmetatile(26, 8, 0x241, TRUE)
    }
    else{
    }
    return
}

script OBR_CheckLogFlag{
    if(flag(FLAG_OBR_REMOVE_LOG) == TRUE){
        setmetatile(6, 11, 0x004, FALSE)
        setmetatile(7, 11, 0x000, FALSE)
    }
    else{
    }
    return
}





