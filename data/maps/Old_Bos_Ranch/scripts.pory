script OBR_DoorIsLocked{
    if(flag(FLAG_SYS_POKEMON_GET) == FALSE){
        setflag(FLAG_SUPPRESS_SPEAKER_NAME)
        msgbox("The door is locked.")
        waitmessage
        closemessage
        clearflag(FLAG_SUPPRESS_SPEAKER_NAME)
    }
    else{
        setflag(FLAG_SUPPRESS_SPEAKER_NAME)
        msgbox("The door is unlocked.")
        waitmessage
        closemessage
        clearflag(FLAG_SUPPRESS_SPEAKER_NAME)
    }
    release
    end
}

script OBR_OldBosRanch_Sign{
